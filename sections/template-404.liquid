<div class="max-w-md">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
  </div>
  <div class="text-base md:text-xl leading-normal">
    {{ section.settings.subtitle_text }}
  </div>
  <div class="mt-2 px-4 py-2 text-base text-center cursor-pointer font-medium shadow rounded-lg text-white bg-gray-800 border">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a href="{{ shop_url }}">
      {{ section.settings.button_label_404 }}
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "h-screen flex items-center justify-center text-center py-7",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "404"
      }, {
        "type": "text",
        "id": "subtitle_text",
        "label": "404 Subtitle",
        "default": "The page that you're looking for it not found"
      }, {
        "type": "text",
        "id": "button_label_404",
        "label": "Button label",
        "default": "Back to home page"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      }
    ]
  }
{% endschema %}